<h1>Roles</h1>

<p><%=link_to 'Add New Role', new_role_path, :class => "btn btn-xs btn-primary" %> | <%=link_to 'Hide Roles', new_role_path, :class => "btn btn-xs btn-primary" %></p>
<div class="row">
	<div class="col-md-5">
		<% if @roles.present? %>
			<table class="table table-striped">
				<thead>
					<tr>
						<th>Name</th>
						<th>Hidden</th>
					</tr>
				</thead>
				<tbody>
					<% @roles.each do |role| %>
						<tr>
							<td><%= role.name %></td>
							<td><%=  %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
		<% else %>
			No Records Found
		<% end %>
	</div>
</div>